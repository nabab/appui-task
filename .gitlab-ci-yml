stages:
- github_sync
github-job:
  stage: github_sync
  script:
  - echo "Hello world !"
  - echo "Going into my folder and make dir"
  - cd ~
  - rm -rf gitlab_folder
  - mkdir gitlab_folder
  - echo "clone"
  - git clone --bare git@git.bbn.so:plugins/appui-task.git gitlab_folder
  - cd gitlab_folder
  - echo "Connecting to Github"
  - git remote add --mirror=fetch github git@github.com:nabab/appui-task.git
  - git fetch git@github.com:nabab/appui-task.git master
  - git push -f git@github.com:nabab/appui-task.git --all
  - git push -f git@github.com:nabab/appui-task.git --tags
  - cd -
  - rm -rf gitlab_folder
  - echo "Done !"
  tags:
  - github

